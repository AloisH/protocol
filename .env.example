# App
NODE_ENV=development
APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://bistro:bistro@localhost:5432/bistro

# Better Auth
AUTH_SECRET=your-secret-key-change-in-production
# Comma-separated list of allowed origins for CORS (defaults to http://localhost:3000)
AUTH_TRUSTED_ORIGINS=http://localhost:3000,https://yourdomain.com

# AI (Vercel AI SDK)
# Get keys from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...
# Get keys from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# Payments (Polar)
# Get keys from: https://polar.sh/settings
POLAR_API_KEY=
POLAR_WEBHOOK_SECRET=

# Email (Resend)
# Get keys from: https://resend.com/api-keys
RESEND_API_KEY=

# Storage (optional - Vercel Blob or S3)
# Vercel Blob: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=
# S3-compatible storage
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=

# Redis (optional - for background jobs)
REDIS_URL=redis://localhost:6379

# Observability (optional)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
