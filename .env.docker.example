# Production Docker Environment Variables
# Copy this to .env when testing production Docker locally

# App
NODE_ENV=production
APP_URL=http://localhost:3000

# Database (PostgreSQL) - Use Docker service name
# IMPORTANT: Use 'postgres' hostname for docker-compose.prod.yml
DATABASE_URL=postgresql://bistro:bistro@postgres:5432/bistro

# Better Auth
AUTH_SECRET=your-secret-key-change-in-production
AUTH_TRUST_HOST=true

# AI (Vercel AI SDK)
# Get keys from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...
# Get keys from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# Payments (Polar)
# Get keys from: https://polar.sh/settings
POLAR_API_KEY=
POLAR_WEBHOOK_SECRET=

# Email (Resend)
# Get keys from: https://resend.com/api-keys
RESEND_API_KEY=

# Storage (optional - Vercel Blob or S3)
# Vercel Blob: https://vercel.com/docs/storage/vercel-blob
BLOB_READ_WRITE_TOKEN=
# S3-compatible storage
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=

# Redis (optional - for background jobs)
# Use Docker service name if running redis in docker-compose
REDIS_URL=redis://redis:6379

# Observability (optional)
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
