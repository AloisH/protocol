{
  "name": "protocol",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "description": "Protocol - Personal routine tracking PWA",
  "author": "Protocol Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "postinstall": "nuxt prepare",
    "setup": "bun run scripts/setup.ts",
    "dev": "nuxt dev",
    "build": "nuxt build",
    "preview": "nuxt preview",
    "lint": "eslint",
    "typecheck": "nuxt typecheck",
    "test": "vitest --config vitest.unit.config.ts",
    "test:unit": "vitest --config vitest.unit.config.ts",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:all": "vitest --config vitest.unit.config.ts && vitest --config vitest.integration.config.ts",
    "test:ui": "vitest --ui --config vitest.unit.config.ts",
    "test:run": "vitest run --config vitest.unit.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.unit.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.82",
    "@iconify-json/simple-icons": "^1.2.63",
    "@nuxt/ui": "^4.3.0",
    "@vite-pwa/nuxt": "^1.1.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "chart.js": "^4.5.1",
    "dexie": "^4.0.8",
    "fuse.js": "^7.1.0",
    "nanoid": "^5.1.6",
    "nuxt": "^4.2.2",
    "ua-parser-js": "^2.0.8",
    "vue-chartjs": "^5.3.3",
    "vue-draggable-plus": "^0.6.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.2.0",
    "@nuxt/eslint": "^1.12.1",
    "@nuxt/test-utils": "^3.21.0",
    "@playwright/test": "^1.58.0",
    "@types/bun": "1.3.6",
    "@types/ua-parser-js": "^0.7.39",
    "@vitest/coverage-v8": "^4.0.16",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-plugin-format": "^1.3.1",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "happy-dom": "^20.0.11",
    "lint-staged": "^16.0.0",
    "nuxt-security": "^2.5.1",
    "playwright-core": "^1.57.0",
    "postcss": "^8.5.6",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "vue-tsc": "^3.2.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun i --frozen-lockfile && bun run lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
